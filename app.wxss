/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
 .parent{  
   height:100vh;/* 高度满屏 */
   display: flex;  
   display: -webkit-flex; /* Safari */
   flex-direction: column;  
}
 .img{  
  margin-top: 10rpx;
  flex:1;  
  display:flex;
  flex-direction: column; 
  justify-content: center;        
  align-items:center;
}
.btn{  
  flex:0.33; 
  background: rgb(116, 238, 126);
  display: flex;
  align-items:center;
  justify-content: center;
}
.txt{
  font-size: 30rpx;
  text-align: center;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
